<h1><%= @list.name %></h1>

<h2>Movies in this List</h2>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %> - <%= bookmark.comment %>
      <%= link_to 'Remove', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
<%= link_to 'Back to All Lists', lists_path, class: 'btn btn-secondary' %>
